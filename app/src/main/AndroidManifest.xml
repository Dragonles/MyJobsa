<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.job.activity" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <!-- 登陆页 -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <!-- 引导页 -->
        <activity
            android:name=".LeadActivity"
            android:label="@string/title_activity_lead"
            android:theme="@style/MyAppLeadTheme" >
        </activity>
        <!-- 闪屏页 -->
        <activity
            android:name="com.job.utils.ShanActivity"
            android:label="@string/title_activity_shan"
            android:theme="@style/MyFullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 发布 招聘 详情页 -->
        <activity
            android:name=".FabuDetailsActivity"
            android:label="@string/title_activity_fabu_details"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <!-- 发布 求职 详情页 -->
        <activity
            android:name=".FabuJobDetailsActivity"
            android:label="@string/title_activity_fabu_job_details"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".DingweiActivity"
            android:label="@string/title_activity_dingwei" >
        </activity>
        <activity
            android:name=".UpdateInformationActivity"
            android:label="@string/title_activity_update_information" >
        </activity>
    </application>

</manifest>
