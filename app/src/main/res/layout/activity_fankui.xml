<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.job.activity.FankuiActivity"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/rly_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/style_color">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rly_top">

        <EditText
            android:gravity="top"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/et_fankui"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_tijiao"
            android:layout_margin="20dp"
            android:layout_below="@+id/et_fankui"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#fff"
            android:background="@drawable/per_submit_style"/>

    </RelativeLayout>

</RelativeLayout>
