<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/login_big_relative" android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="right"
        android:padding="20dp"
        android:id="@+id/go"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/login_jumbp"
            android:layout_height="wrap_content"
            android:text="立即浏览"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/login_title_linear"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/style_color"
                android:background="@null"
                android:textSize="30sp"
                android:text="@string/login_app_name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#CCC"/>
            <EditText
                android:layout_width="fill_parent"
                android:textCursorDrawable="@drawable/registe_editeext_guangbiao"
                android:padding="10dp"
                android:inputType="text"
                android:id="@+id/edit_login_name"
                android:background="@null"
                android:hint="邮箱/手机号"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#CCC"/>
            <EditText
                android:layout_width="fill_parent"
                android:textCursorDrawable="@drawable/registe_editeext_guangbiao"
                android:padding="10dp"
                android:id="@+id/edit_login_pwd"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="密码"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#CCC"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:onClick="denglubutton"
                android:id="@+id/btn_login_submit"
                android:textColor="@color/style_color"
                android:background="@drawable/login_buttons_style"
                android:text="登录"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:text="第三方登录:"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbtn_login_byweixin"
                    android:background="@drawable/share_weixin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbtn_login_byqq"
                    android:background="@drawable/share_qq"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imbtn_login_bysina"
                    android:background="@drawable/share_sina"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/share_qqzone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/btom"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/style_color"
            android:id="@+id/btn_login_toregister"
            android:onClick="zhuce"
            android:text="@string/login_regist_name"/>
    </RelativeLayout>
</RelativeLayout>
