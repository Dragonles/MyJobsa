<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fabudetailsActivity_fabua_background"
    tools:context="com.job.activity.FabuDetailsActivity">

    <RelativeLayout
        android:id="@+id/fabuactivity_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/fragment_fabu_title">

        <ImageButton
            android:id="@+id/fabuactivity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/fragment_fabu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_fabu_title"
            android:textSize="20sp"
            android:textColor="@color/fragment_fabu_title_text_coler"
            android:layout_centerInParent="true"/>

        <!--<TextView-->
        <!--android:id="@+id/fragment_fabu_myfabu"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:textColor="@color/fragment_fabu_title_text_coler"-->
        <!--android:text="@string/fragment_fabu_title_text"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentRight="true"/>-->
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/fabuactivity_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- text  工作地点  工作时间 -->
            <RelativeLayout
                android:id="@+id/rel_fabu01"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fabudetailsActivity_fabua_neirong_background">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_gzdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="10dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:text="工作地点："
                        android:textSize="14sp"
                        android:textColor="#464646"/>
                    <Button
                        android:id="@+id/btn_fabu_job_didian"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_login_select"
                        android:layout_marginLeft="3dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:hint="请输入工作地点"
                        android:layout_toRightOf="@id/text_gzdd"/>
                </LinearLayout>

                <View
                    android:id="@+id/view01"
                    android:layout_below="@id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_below="@id/view01"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_job_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="10dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:text="工作时间："
                        android:textSize="14sp"
                        android:textColor="#464646"/>
                    <TextView
                        android:id="@+id/txt_fabu_job_date_start"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/edit_login_select"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text="开始时间："
                        android:layout_toRightOf="@id/text_gzdd"/>
                    <Button
                        android:id="@+id/btn_fabu_job_date_start"
                        android:layout_width="180dp"
                        android:background="@drawable/edit_login_select"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="选择开始时间"
                        android:layout_toRightOf="@id/text_gzdd"/>
                </LinearLayout>

                <View
                    android:id="@+id/view002"
                    android:layout_below="@id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>

                <LinearLayout
                    android:id="@+id/line02"
                    android:layout_below="@id/view002"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_job_date_end"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="10dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:text="工作时间："
                        android:textSize="14sp"
                        android:textColor="#464646"/>
                    <TextView
                        android:id="@+id/txt_fabu_job_date_end"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/edit_login_select"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:text="开始时间："
                        android:layout_toRightOf="@id/text_gzdd"/>
                    <Button
                        android:id="@+id/btn_fabu_job_date_end"
                        android:layout_width="180dp"
                        android:background="@drawable/edit_login_select"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="选择结束时间"
                        android:layout_toRightOf="@id/text_gzdd"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- text  工作详情  工作要求 -->
            <RelativeLayout
                android:id="@+id/rel_fabu02"
                android:layout_marginTop="20dp"
                android:layout_below="@id/rel_fabu01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/fabudetailsActivity_fabua_neirong_background">

                <LinearLayout
                    android:id="@+id/rel_line01"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/text_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:text="工作详情："
                        android:textSize="16sp"
                        android:textColor="#464646"
                        android:layout_toLeftOf="@id/txt_fabu_job_date_start"
                        android:paddingLeft="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view02"
                    android:layout_below="@id/rel_line01"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>
                <!-- 职位、薪资 -->
                <LinearLayout
                    android:id="@+id/rel_line01_details01"
                    android:layout_below="@id/view02"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_details01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="职位："
                        android:textSize="14sp"
                        android:textColor="#464646" />
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_fabu_job_zhiwei"
                        android:background="@drawable/edit_login_select"
                        android:layout_marginLeft="3dp"
                        android:text="选择职位"
                        android:layout_toRightOf="@id/text_details01"/>
                    <!-- 薪资 -->
                    <TextView
                        android:id="@+id/text_details05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="学历："
                        android:textSize="14sp"
                        android:textColor="#464646" />
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_login_select"
                        android:id="@+id/edit_fabu_job_xueli"
                        android:paddingLeft="5dp"
                        android:text="选择学历"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view03"
                    android:layout_below="@id/rel_line01_details01"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>

                <!-- 学历、人数-->
                <LinearLayout
                    android:id="@+id/rel_line01_details02"
                    android:layout_below="@id/rel_line01_details01"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- 学历 -->
                    <TextView
                        android:id="@+id/text_details03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="薪资："
                        android:textSize="14sp"
                        android:textColor="#464646" />
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_fabu_job_xinzi"
                            android:background="@drawable/edit_login_select"
                            android:layout_marginLeft="3dp"
                            android:paddingLeft="5dp"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:layout_toRightOf="@id/text_details01"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- 人数 -->
                    <TextView
                        android:id="@+id/text_details02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="人数："
                        android:textSize="14sp"
                        android:textColor="#464646" />
                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_fabu_job_renshu"
                        android:background="@drawable/edit_login_select"
                        android:layout_marginLeft="3dp"
                        android:paddingLeft="5dp"
                        android:inputType="number"
                        android:layout_toRightOf="@id/text_details02"/>
                </LinearLayout>

                <View
                    android:id="@+id/view04"
                    android:layout_below="@id/rel_line01_details02"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>


                <!-- 学历、人数-->
                <LinearLayout
                    android:id="@+id/rel_line01_details03"
                    android:layout_below="@id/rel_line01_details02"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <!-- 学历 -->
                    <TextView
                        android:id="@+id/text_details04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="结算："
                        android:textSize="14sp"
                        android:textColor="#464646" />
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_fabu_job_jiesuan"
                        android:background="@drawable/edit_login_select"
                        android:layout_marginLeft="3dp"
                        android:paddingLeft="5dp"
                        android:text="选择类型"
                        android:layout_toRightOf="@id/text_details01"/>
                    <!-- 人数 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="5dp"
                        android:text="加急："
                        android:textSize="14sp"
                        android:textColor="@color/loginout_button_color" />
                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox_fabu_job_jiaji"
                        android:layout_marginLeft="3dp"
                        android:textSize="20sp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@id/text_details02"/>
                </LinearLayout>

                <View
                    android:id="@+id/view06"
                    android:layout_below="@id/rel_line01_details03"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CACACA"/>

                <!-- 工作要求 -->
                <LinearLayout
                    android:id="@+id/rel_line02"
                    android:layout_below="@id/view06"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/text_yaoqiu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/shu"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:text="工作要求："
                        android:textSize="16sp"
                        android:textColor="#464646"
                        android:layout_toLeftOf="@id/txt_fabu_job_date_start"
                        android:paddingLeft="20dp" />
                </LinearLayout>

                <!--<View-->
                <!--android:id="@+id/view05"-->
                <!--android:layout_below="@id/rel_line02"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.5dp"-->
                <!--android:background="#CACACA"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/rel_line02">
                    <EditText
                        android:paddingLeft="5dp"
                        android:id="@+id/edit_fabu_job_yaoqiu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edit_login_select"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_fabu04"
                android:layout_below="@id/rel_fabu02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- text  联系人  联系方式 -->
                <RelativeLayout
                    android:id="@+id/rel_fabu03"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fabudetailsActivity_fabua_neirong_background">

                    <LinearLayout
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_lianxiren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/shu"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:layout_gravity="center"
                            android:text="联系人："
                            android:textSize="14sp"
                            android:textColor="#464646"/>
                        <EditText
                            android:id="@+id/edit_fabu_job_lianxiren"
                            android:layout_gravity="center"
                            android:background="@drawable/edit_login_select"
                            android:layout_marginLeft="3dp"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_toRightOf="@id/text_lianxiren"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/view09"
                        android:layout_below="@id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#CACACA"/>

                    <LinearLayout
                        android:id="@+id/line22"
                        android:layout_below="@id/view09"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_job_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/shu"
                            android:drawablePadding="10dp"
                            android:paddingLeft="20dp"
                            android:layout_gravity="center"
                            android:text="联系电话："
                            android:textSize="14sp"
                            android:textColor="#464646"/>
                        <EditText
                            android:id="@+id/edit_fabu_job_phone"
                            android:layout_marginLeft="3dp"
                            android:layout_width="180dp"
                            android:background="@drawable/edit_login_select"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:layout_toRightOf="@id/text_lianxiren"/>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <!-- 发布招聘的 按钮-->
            <RelativeLayout
                android:id="@+id/fabuactivity_bottom"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_below="@id/rel_fabu04"
                android:background="@color/fabudetailsActivity_fabua_neirong_background">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btn_zhaopin"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="发布招聘"
                        android:textColor="@color/fragment_fabu_title_text_coler"
                        android:background="@drawable/per_submit_style"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
