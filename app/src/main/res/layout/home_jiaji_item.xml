<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="7dp"
            android:layout_height="40dp"
            android:background="@color/loginout_button_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="急招一名PS人员"
            android:gravity="center"
            android:textColor="@color/public_font_color"
            android:id="@+id/hot_item_title"
            android:paddingLeft="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/hot_item_money"
                android:gravity="right"
                android:textColor="@color/public_font_color"
                android:layout_height="wrap_content"
                android:text="薪资可面议"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/public_font_color"
                android:id="@+id/hot_item_address"
                android:maxLines="1"
                android:layout_below="@+id/hot_item_money"
                android:text="地址:兰山区民政局" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
