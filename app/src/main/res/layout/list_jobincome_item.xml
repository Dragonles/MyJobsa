<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.job.activity.JobIncomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:background="#FFF"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务员"
            android:id="@+id/text_jobincome_type"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要求地址："
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兰山区"
            android:id="@+id/text_jobincome_district"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/public_liner_color"
            android:id="@+id/textView2"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView3"
            android:layout_alignBottom="@+id/text_jobincome_district"
            android:layout_toLeftOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薪资："
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_jobincome_money"
            android:layout_toStartOf="@+id/text_jobincome_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000元/月"
            android:id="@+id/text_jobincome_money"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
