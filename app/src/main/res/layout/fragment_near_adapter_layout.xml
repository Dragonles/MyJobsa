<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark">

        <TextView
            android:layout_width="2dp"
            android:layout_height="34dp"
            android:background="@color/style_color"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【"
            android:textColor="@color/public_font_color"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.6KM"
            android:textColor="@color/public_font_color"
            android:textSize="12sp"
            android:id="@+id/text_near_distance"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="】"
            android:textColor="@color/public_font_color"
            android:textSize="12sp"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_near_distance"
            android:layout_toEndOf="@+id/text_near_distance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开元上城"
            android:textColor="@color/public_font_color"
            android:textSize="12sp"
            android:id="@+id/text_near_placename"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安保"
            android:gravity="center"
            android:textColor="@color/public_font_color"
            android:textSize="12sp"
            android:id="@+id/text_near_jobnead"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_near_placename"
            android:layout_toLeftOf="@+id/text_near_money"
            android:layout_toStartOf="@+id/text_near_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2345/月结"
            android:textColor="@color/loginout_button_color"
            android:textSize="12sp"
            android:id="@+id/text_near_money"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>



</RelativeLayout>
